    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via PNPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "pnpm",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Next App",
            "request": "launch",
            "runtimeExecutable": "pnpx",
            "runtimeArgs": [
                "lerna",
                "run",
                "dev",
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            // "serverReadyAction": {
            //     "action": "debugWithChrome",
            //     "pattern": "Local: http://localhost:([0-9]+)",
            //     "uriFormat": "http://localhost:%s"
            // }
        }
    ]
}